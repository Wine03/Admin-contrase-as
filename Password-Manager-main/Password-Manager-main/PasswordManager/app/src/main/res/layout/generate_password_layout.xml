<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/sectionHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generar Password"
                        android:textSize="20dp"
                        android:textStyle="bold">
                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:padding="0dp"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/textViewPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*********">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sectionEntradas"
                    android:layout_below="@id/sectionHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Longitud:">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal|center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0">
                        </TextView>
                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderLengthPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription=""
                            android:value="6"
                            android:valueFrom="1"
                            android:valueTo="60"
                            android:stepSize="1"
                            app:haloColor="@color/blue">
                        </com.google.android.material.slider.Slider>
                        <TextView
                            android:id="@+id/textViewLengt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60">
                        </TextView>
                    </LinearLayout>
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAllOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Todas las opciones:"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:singleLine="true">
                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipMayusculas"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:text="Mayúsculas">
                                </com.google.android.material.chip.Chip>
                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipMinusculas"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:text="Minúsculas">
                                </com.google.android.material.chip.Chip>
                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipNumeros"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:text="Números">
                                </com.google.android.material.chip.Chip>
                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSimbolos"
                                    style="@style/Widget.MaterialComponents.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="55dp"
                                    android:text="Símbolos">
                                </com.google.android.material.chip.Chip>
                            </com.google.android.material.chip.ChipGroup>
                        </HorizontalScrollView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:id="@+id/layoutContaineraddChar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchIncludeChars"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Incluir caracteres :"/>
                            <EditText
                                android:id="@+id/editTextAddChars"
                                android:background="@drawable/custom_edit_text"
                                android:layout_width="match_parent"
                                android:visibility="visible"
                                android:layout_height="55dp"
                                android:hint="Agregar"
                                android:enabled="false"
                                android:textColorHint="#777679"
                                android:textColor="#777679"
                                android:textSize="16dp"
                                android:drawablePadding="10dp"
                                android:paddingStart="12dp"
                                android:drawableStart="@drawable/baseline_title_24">
                            </EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:id="@+id/layoutContainerExcChar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchExcludeChars"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Excluir caracteres:"/>
                            <EditText
                                android:imeOptions="flagNoFullscreen"
                                android:id="@+id/editTextExcludeChars"
                                android:background="@drawable/custom_edit_text"
                                android:layout_width="match_parent"
                                android:visibility="visible"
                                android:enabled="false"
                                android:layout_height="55dp"
                                android:hint="Agregar"
                                android:textColorHint="#777679"
                                android:textColor="#777679"
                                android:textSize="16dp"
                                android:drawablePadding="10dp"
                                android:paddingStart="12dp"
                                android:drawableStart="@drawable/baseline_title_24">
                            </EditText>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/sectionEntradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">
                    <Button
                        android:id="@+id/buttomAceptar"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:backgroundTint="@color/blue"
                        android:textColor="@color/white"
                        android:text="Aceptar">
                    </Button>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>